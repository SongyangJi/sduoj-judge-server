                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>



        <!-- 操作系统相关日志 -->
        <!-- 滚动文件日志时间粒度到分钟 -->
        <!-- 滚动日志文件夹按照月来划分、一个文件夹下最多100个文件 -->
