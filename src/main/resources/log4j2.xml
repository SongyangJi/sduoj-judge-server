                <SizeBasedTriggeringPolicy size="1 MB"/>
            </Policies>

            <!-- 滚动出来的日志最多存100个 -->
            <DefaultRolloverStrategy max="100">
                <Delete basePath="${LOG_HOME}/${PLATFORM}-log" maxDepth="2">
