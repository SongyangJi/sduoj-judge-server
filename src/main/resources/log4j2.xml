                <!-- 每120分钟 或者 日志文件超过1MB滚动一次 -->
                <TimeBasedTriggeringPolicy interval="120" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 MB"/>
            </Policies>

            <!-- 滚动出来的日志最多存100个 -->
