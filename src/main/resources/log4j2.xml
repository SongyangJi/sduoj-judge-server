                    <!-- glob 项为需要自动清理日志的pattern -->
                    <IfFileName glob="${date:yyyy-MM}/*.log"/>
                    <!-- 1m 表示如果超过指定文件数时，自动清理掉1分钟以前的日志文件 -->
